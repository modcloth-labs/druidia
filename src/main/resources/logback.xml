<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="SIFT" class="ch.qos.logback.classic.sift.SiftingAppender">
    <discriminator>
      <key>recordType</key>
      <defaultValue>unknown</defaultValue>
    </discriminator>
    <sift>
      <appender name="${recordType}" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>current/${recordType}.out</file>
        <encoder>
          <pattern>%d{HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="com.modcloth.backend.IntervalBasedRollingPolicy">
          <fileNamePattern>archive/${recordType}-%d{yyyyMMdd-HHmm}.out</fileNamePattern>
          <cleanHistoryOnStart>false</cleanHistoryOnStart>
          <maxHistory>50</maxHistory>
          <interval>5</interval>
        </rollingPolicy>
      </appender>
    </sift>
  </appender>

  <logger name="com.modcloth.druidia" level="INFO" additivity="true">
    <appender-ref ref="SIFT"/>
  </logger>

  <root level="info">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
